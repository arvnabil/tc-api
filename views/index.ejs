<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Pengguna TrueConf</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
        background-image: url("/images/bg.svg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: #fff !important;
      }
      .card {
        background-color: rgba(28, 96, 104, 0.9) !important;
        border: 1px solid hsla(0, 0%, 100%, 0.12) !important;
        color: white !important;
      }
      .card-header {
        background-color: #f57f16 !important;
        border-bottom: 1px solid hsla(0, 0%, 100%, 0.12) !important;
      }
      .btn-primary {
        background-color: #f57f16 !important;
        border-color: #f57f16 !important;
        color: white !important;
      }
      .btn-primary:hover {
        background-color: #d87314 !important;
        border-color: #d87314 !important;
      }
      td {
        color: white !important;
      }
      .table {
        --bs-table-bg: rgba(28, 96, 104, 0.9) !important;
        --bs-table-color: white !important;
        --bs-table-border-color: hsla(0, 0%, 100%, 0.2) !important;
        --bs-table-striped-bg: rgba(28, 96, 104, 0.8) !important;
        --bs-table-hover-bg: rgba(255, 255, 255, 0.075) !important;
      }
      .table-light {
        --bs-table-bg: #f57f16 !important;
        --bs-table-color: white !important;
        --bs-table-border-color: hsla(0, 0%, 100%, 0.2) !important;
      }
      .table-light th {
        white-space: nowrap !important;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
      <h1>Daftar Pengguna TrueConf</h1>

      <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg[0] %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (search_success_msg) { %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <%= search_success_msg %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <div
        class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2"
      >
        <form action="/" method="GET" class="flex-grow-1 position-relative">
          <div class="input-group">
            <input
              type="text"
              name="search"
              id="searchInput"
              class="form-control"
              placeholder="Cari berdasarkan User ID"
              value="<%= searchQuery %>"
              required
              autocomplete="off"
            />
            <button class="btn btn-primary" type="submit">Cari</button>
          </div>
          <div
            id="autocomplete-results"
            class="list-group position-absolute w-100"
            style="z-index: 1000"
          ></div>
        </form>
      </div>

      <% if (!searchQuery) { %>
      <div class="alert alert-info text-center">
        Silakan lakukan pencarian untuk menampilkan data pengguna.
      </div>
      <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>User ID</th>
              <th>Nama Depan</th>
              <th>Nama Belakang</th>
              <th>Email</th>
              <th>Company</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %> <% const user = users[0].user
            || users[0]; %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.company %></td>
              <td>
                <span
                  class="badge <%= user.is_active ? 'text-bg-success' : 'text-bg-secondary' %>"
                >
                  <%= user.is_active ? 'Aktif' : 'Tidak Aktif' %>
                </span>
              </td>
            </tr>
            <% } else if (searchQuery) { %>
            <tr>
              <td colspan="6" class="text-center">
                Tidak ada data pengguna yang cocok dengan pencarian "<%=
                searchQuery %>".
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <% if (totalPages > 1) { %>
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a
              class="page-link"
              href="/?search=<%= searchQuery %>&page=<%= currentPage - 1 %>"
              >Sebelumnya</a
            >
          </li>
          <% for(let i = 1; i <= totalPages; i++) { %>
          <li
            class="page-item <%= i === currentPage ? 'active' : '' %>"
            aria-current="page"
          >
            <a
              class="page-link"
              href="/?search=<%= searchQuery %>&page=<%= i %>"
              ><%= i %></a
            >
          </li>
          <% } %>
          <li
            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
          >
            <a
              class="page-link"
              href="/?search=<%= searchQuery %>&page=<%= currentPage + 1 %>"
              >Berikutnya</a
            >
          </li>
        </ul>
      </nav>
      <% } } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const searchInput = document.getElementById("searchInput");
        const resultsContainer = document.getElementById(
          "autocomplete-results"
        );
        const searchForm = searchInput.closest("form");

        let debounceTimer;

        searchInput.addEventListener("input", () => {
          clearTimeout(debounceTimer);
          const term = searchInput.value;

          if (term.length < 2) {
            resultsContainer.innerHTML = "";
            return;
          }

          debounceTimer = setTimeout(() => {
            fetch(`/api/users/search?term=${encodeURIComponent(term)}`)
              .then((response) => response.json())
              .then((data) => {
                resultsContainer.innerHTML = "";
                if (data.length > 0) {
                  data.forEach((userId) => {
                    const item = document.createElement("a");
                    item.href = "#";
                    item.classList.add(
                      "list-group-item",
                      "list-group-item-action"
                    );
                    item.textContent = userId;
                    item.addEventListener("click", (e) => {
                      e.preventDefault();
                      searchInput.value = userId;
                      resultsContainer.innerHTML = "";
                      searchForm.submit();
                    });
                    resultsContainer.appendChild(item);
                  });
                }
              })
              .catch((error) => {
                console.error("Error fetching autocomplete:", error);
                resultsContainer.innerHTML = "";
              });
          }, 300); // Menunggu 300ms setelah user berhenti mengetik
        });

        // Sembunyikan hasil saat klik di luar area pencarian
        document.addEventListener("click", (e) => {
          if (!searchForm.contains(e.target)) {
            resultsContainer.innerHTML = "";
          }
        });
      });
    </script>
  </body>
</html>
